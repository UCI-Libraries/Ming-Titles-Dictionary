<div class="pass-reset">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2>Change your password</h2>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "titles-form form-horizontal", name: "myForm", html: { method: :put }) do |f| %>
        <div class="form-error">
          <%= devise_error_messages! %>
        </div>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-group row">
            <%= f.label :password, "New password" %><br />
              <em>(Password must be between 6 and 20 characters, contain one lower &amp; uppercase letter, and one non-alpha character)</em><br />
            <%= f.password_field :password, class: 'form-control', autofocus: true, autocomplete: "off" %>
          </div>
          <div class="form-group row">
            <%= f.label :password_confirmation, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>
          <div class="form-group row">
            <div class="actions">
              <%= f.submit "Change my password" , class:"btn pull-right" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<!-- </div> -->
    <!-- <%= render "devise/shared/links" %> -->
</div>
